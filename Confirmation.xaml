<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Flashnote.Confirmation"
             Title="確認画面">

    <ContentPage.Resources>
        <ResourceDictionary>
            <!-- ボタンスタイル -->
            <Style x:Key="ConfirmationButtonStyle" TargetType="Button">
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="TextColor" Value="{AppThemeBinding Light=Black, Dark=White}"/>
                <Setter Property="BackgroundColor" Value="Transparent"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="Padding" Value="20,12"/>
                <Setter Property="Margin" Value="20,10"/>
                <Setter Property="HorizontalOptions" Value="Fill"/>
                <Setter Property="VisualStateManager.VisualStateGroups">
                    <VisualStateGroupList>
                        <VisualStateGroup x:Name="CommonStates">
                            <VisualState x:Name="Normal" />
                            <VisualState x:Name="PointerOver">
                                <VisualState.Setters>
                                    <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=#E0E0E0, Dark=#404040}" />
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState x:Name="Pressed">
                                <VisualState.Setters>
                                    <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=#E0E0E0, Dark=#404040}" />
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateGroupList>
                </Setter>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

       <ScrollView>
           <VerticalStackLayout Padding="20" Spacing="20">
               <!-- ヘッダー情報 -->
               <Frame BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#2D2D30}" 
                      CornerRadius="12" 
                      Padding="20"
                      HasShadow="True">
                   <VerticalStackLayout Spacing="10">
                       <!-- ノート名 -->
                       <Label x:Name="NoteTitleLabel"
                              Text="ノート名"
                              FontSize="24"
                              FontAttributes="Bold"
                              HorizontalOptions="Center"
                              TextColor="{AppThemeBinding Light=#1F1F1F, Dark=#FFFFFF}"/>

                       <!-- 問題数の表示 -->
                       <Label x:Name="TotalQuestionsLabel"
                              Text="カード枚数: 0"
                              FontSize="16"
                              HorizontalOptions="Center"
                              TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}"/>
                   </VerticalStackLayout>
               </Frame>

               <!-- 学習関連のアクション -->
               <Frame CornerRadius="12" 
                      Padding="20"
                      HasShadow="True">
                    <VerticalStackLayout Spacing="15">
                    <!-- 学習開始ボタン -->
                       <Button Text="学習を開始"
                               Style="{StaticResource ConfirmationButtonStyle}"
                               Clicked="OnStartLearningClicked"/>
                   </VerticalStackLayout>
               </Frame>

               <!-- カード管理のアクション -->
               <Frame CornerRadius="12" 
                      Padding="20"
                      HasShadow="True">
                    <VerticalStackLayout Spacing="15">
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                           <!-- カードの追加ボタン -->
                           <Button Text="カードの追加"
                                   Style="{StaticResource ConfirmationButtonStyle}"
                                   Clicked="AddCardClicked"
                                   Grid.Column="0"/>
                           
                           <!-- カードの編集ボタン -->
                           <Button Text="カードの編集"
                                   Style="{StaticResource ConfirmationButtonStyle}"
                                   Clicked="EditCardsClicked"
                                   Grid.Column="1"/>
                       </Grid>
                   </VerticalStackLayout>
               </Frame>

               <!-- その他のアクション -->
               <Frame CornerRadius="12" 
                      Padding="20"
                      HasShadow="True">
                   <VerticalStackLayout Spacing="15">
                       <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                           <!-- NotePage遷移ボタン -->
                           <Button x:Name="ToNoteButton"
                                   Text="ノートモードへ"
                                   Style="{StaticResource ConfirmationButtonStyle}"
                                   Clicked="ToNoteClicked"
                                   Grid.Column="0"/>
                           
                           <!-- Ankiにエクスポート -->
                           <Button Text="Ankiにエクスポート"
                                   Style="{StaticResource ConfirmationButtonStyle}"
                                   Clicked="OnExportToAnkiClicked"
                                   Grid.Column="1"/>
                       </Grid>
                   </VerticalStackLayout>
               </Frame>
           </VerticalStackLayout>
       </ScrollView>
</ContentPage>
